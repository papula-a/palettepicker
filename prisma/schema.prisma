generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Palette {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  name   String // Name of the palette
  colors String[] // Array of hex color values (e.g., ["#FF5733", "#C70039", "#900C3F"])
  userId String   @db.String // Unique user identifier from Kinde
}
