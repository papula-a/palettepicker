generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  name     String?
  palettes Palette[] // One-to-many relationship: each user can have multiple palettes
}

model Palette {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  colors Color[]
  user   User    @relation(fields: [userId], references: [id])
  userId String  @db.ObjectId
}

// Color is an embedded document for each palette
type Color {
  name String
  hex  String
}
